{% extends 'base.html.twig' %}

{% block title %}Localidad index{% endblock %}

{% block stylesheets %}

    <link href="{{ asset('css/styles.css') }}" rel="stylesheet" type="text/css"/>

{% endblock %}

{% block body %}

    <div class="titulo">
        <h1>Sistema de gestión académica IS</h1>
    </div>

   <div class="barra">
        <a class="boton-home" href={{path('app_homepage')}} > <img src="{{asset('media/casita.png')}}"> </a>
        <a class="btn btn-lg" href={{path('app_institutos')}} >Institutos</a>
        <a class="btn btn-lg" href={{path('app_preinsc')}} >Preinscripción</a>
        <a class="btn btn-lg" href={{path('app_plataforma')}} >Acceso a la plataforma</a>
    </div>
    <h1>Localidad index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Cod_postal</th>
                <th>Institutos</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for localidad in localidads %}
            <tr>
                <td>{{ localidad.id }}</td>
                <td>{{ localidad.nombre }}</td>
                <td>{{ localidad.codPostal }}</td>
                <td>{{ localidad.institutos | join('<br/>') | raw }}</td>
                <td>
                    <a href="{{ path('app_localidad_show', {'id': localidad.id}) }}">show</a>
                    <a href="{{ path('app_localidad_edit', {'id': localidad.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_localidad_new') }}">Create new</a>
{% endblock %}
