{% extends 'base.html.twig' %}

{% block title %}Instituto{% endblock %}

{% block stylesheets %}

    <link href="{{ asset('css/styles.css') }}" rel="stylesheet" type="text/css"/>

{% endblock %}

{% block body %}

 <div class="titulo">
 <h1>Sistema de gestión académica IS</h1>
    </div>
     <div class="barra">
        <a class="boton-home" href={{path('app_homepage')}} > <img src="{{asset('media/casita.png')}}"> </a>
        <a class="btn btn-lg" href={{path('app_institutos')}} >Institutos</a>
        <a class="btn btn-lg" href={{path('app_preinsc')}} >Preinscripción</a>
        <a class="btn btn-lg" href={{path('app_plataforma')}} >Acceso a la plataforma</a>
    </div>

    <h1>Carreras del instituto {{ instituto.nombre }}</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Duracion</th>
                <th>Turno</th>
                <th>Resolucion</th>
            </tr>
        </thead>
        <tbody>
        {% for carrera in instituto.carreras %}
            <tr>
                <td>{{ carrera.nombre }}</td>
                <td>{{ carrera.duracion }}</td>
                <td>{{ carrera.turnos | join('<br/>') | raw }}</td>
                <td>{{ carrera.resolucion }}</td>
                {#<td>
                    <a href="{{ path('app_carrera_show', {'id': carrera.id}) }}">show</a>
                    <a href="{{ path('app_carrera_edit', {'id': carrera.id}) }}">edit</a>
                </td>#}
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_instituto_index') }}">back to list</a>

{% endblock %}
